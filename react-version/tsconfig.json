{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src", // Changed baseUrl to point to "src" for consistent aliasing
    "paths": {
      "@/*": ["*"]       // Adjusted to reflect baseUrl change
    }
  },
  "include": ["src", "src/tailwind.config.js"]      // No changes; includes everything in "src"
}
